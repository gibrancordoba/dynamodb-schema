{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["dom","es6", "es2015"]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "docs"
    ]
}
